@model Instrutor

<h2>Editar Instrutor</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="CD_INSTRUTOR" />

    <div class="form-group">
        <label asp-for="NM_INSTRUTOR"></label>
        <input asp-for="NM_INSTRUTOR" class="form-control" />
        <span asp-validation-for="NM_INSTRUTOR" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EML_INSTRUTOR"></label>
        <input asp-for="EML_INSTRUTOR" class="form-control" />
        <span asp-validation-for="EML_INSTRUTOR" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NM_ESPECIALIDADE"></label>
        <input asp-for="NM_ESPECIALIDADE" class="form-control" />
        <span asp-validation-for="NM_ESPECIALIDADE" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Atualizar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
