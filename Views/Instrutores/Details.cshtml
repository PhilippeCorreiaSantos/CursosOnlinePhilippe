@model Instrutor

<h2>Detalhes do Instrutor</h2>

<div class="form-group">
    <label><strong>Nome:</strong></label>
    <p>@Model.NM_INSTRUTOR</p>
</div>

<div class="form-group">
    <label><strong>Email:</strong></label>
    <p>@Model.EML_INSTRUTOR</p>
</div>

<div class="form-group">
    <label><strong>Especialidade:</strong></label>
    <p>@Model.NM_ESPECIALIDADE</p>
</div>

<a asp-action="Edit" asp-route-id="@Model.CD_INSTRUTOR" class="btn btn-warning">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Voltar</a>
