@model IEnumerable<Curso>

<h2>Cursos</h2>
<a asp-action="Create" class="btn btn-primary mb-2">Novo Curso</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Título</th>
            <th>Descrição</th>
            <th>Categoria</th>
            <th>Instrutor</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var curso in Model)
        {
            <tr>
                <td>@curso.NM_CURSO</td>
                <td>@curso.DS_CURSO</td>
                <td>@curso.Categoria?.NM_CATEGORIA</td>
                <td>@curso.Instrutor?.NM_INSTRUTOR</td>
                <td>
                    <a asp-action="Details" asp-route-id="@curso.CD_CURSO" class="btn btn-info btn-sm">Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@curso.CD_CURSO" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@curso.CD_CURSO" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
