@model Curso

<h2>Excluir Curso</h2>

<p>Tem certeza que deseja excluir o curso <strong>@Model.NM_CURSO</strong>?</p>

<div class="form-group">
    <label><strong>Descrição:</strong></label>
    <p>@Model.DS_CURSO</p>
</div>

<div class="form-group">
    <label><strong>Categoria:</strong></label>
    <p>@Model.Categoria?.NM_CATEGORIA</p>
</div>

<div class="form-group">
    <label><strong>Instrutor:</strong></label>
    <p>@Model.Instrutor?.NM_INSTRUTOR</p>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="CD_CURSO" />
    <button type="submit" class="btn btn-danger">Confirmar Exclusão</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
