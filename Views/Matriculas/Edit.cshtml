@model Matricula

<h2>Editar Matr√≠cula</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="CD_MATRICULA" />

    <div class="form-group">
        <label asp-for="CD_ALUNO"></label>
        <select asp-for="CD_ALUNO" asp-items="ViewBag.Alunos" class="form-control"></select>
        <span asp-validation-for="CD_ALUNO" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CD_CURSO"></label>
        <select asp-for="CD_CURSO" asp-items="ViewBag.Cursos" class="form-control"></select>
        <span asp-validation-for="CD_CURSO" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DT_MATRICULA"></label>
        <input asp-for="DT_MATRICULA" type="date" class="form-control" />
        <span asp-validation-for="DT_MATRICULA" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Atualizar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
