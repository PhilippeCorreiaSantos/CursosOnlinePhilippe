@model Matricula

<h2>Excluir Matrícula</h2>

<p>Tem certeza que deseja excluir esta matrícula?</p>

<div class="form-group">
    <label><strong>Aluno:</strong></label>
    <p>@Model.Aluno?.NM_ALUNO</p>
</div>

<div class="form-group">
    <label><strong>Curso:</strong></label>
    <p>@Model.Curso?.NM_CURSO</p>
</div>

<div class="form-group">
    <label><strong>Data:</strong></label>
    <p>@Model.DT_MATRICULA.ToShortDateString()</p>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="CD_MATRICULA" />
    <button type="submit" class="btn btn-danger">Confirmar Exclusão</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
