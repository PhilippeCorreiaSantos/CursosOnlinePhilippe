@model Matricula

<h2>Detalhes da Matrícula</h2>

<div class="form-group">
    <label><strong>Aluno:</strong></label>
    <p>@Model.Aluno?.NM_ALUNO</p>
</div>

<div class="form-group">
    <label><strong>Curso:</strong></label>
    <p>@Model.Curso?.NM_CURSO</p>
</div>

<div class="form-group">
    <label><strong>Data da Matrícula:</strong></label>
    <p>@Model.DT_MATRICULA.ToShortDateString()</p>
</div>

<a asp-action="Edit" asp-route-id="@Model.CD_MATRICULA" class="btn btn-warning">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Voltar</a>
