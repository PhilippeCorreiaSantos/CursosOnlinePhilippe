@model Avaliacao
@{
    var alunos = ViewBag.Alunos as List<Aluno>;
    var cursos = ViewBag.Cursos as List<Curso>;
}

<h2>Cadastrar Avaliação</h2>

<form asp-action="Create">
    <div class="form-group">
        <label>Aluno</label>
        <select asp-for="CD_ALUNO" class="form-control">
            <option value="">-- Selecione um aluno --</option>
            @foreach (var aluno in alunos)
            {
                <option value="@aluno.CD_ALUNO">@aluno.NM_ALUNO</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Curso</label>
        <select asp-for="CD_CURSO" class="form-control" id="cursoSelect">
            <option value="">-- Selecione um curso --</option>
        </select>
    </div>

    <div class="form-group">
        <label>Nota</label>
        <input asp-for="VL_NOTA" type="number" min="0" max="10" class="form-control" />
    </div>

    <div class="form-group">
        <label>Comentário</label>
        <textarea asp-for="DS_COMENTARIO" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Data</label>
        <input asp-for="DT_AVALIACAO" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('select[name="CD_ALUNO"]').change(function () {
                var alunoId = $(this).val();
                $('#cursoSelect').empty().append('<option value="">-- Selecione um curso --</option>');

                if (alunoId) {
                    $.getJSON('/Avaliacoes/GetCursosPorAluno', { alunoId: alunoId }, function (data) {
                        $.each(data, function (i, curso) {
                            $('#cursoSelect').append($('<option>', {
                                value: curso.id,
                                text: curso.nome
                            }));
                        });
                    });
                }
            });
        });
    </script>
}
