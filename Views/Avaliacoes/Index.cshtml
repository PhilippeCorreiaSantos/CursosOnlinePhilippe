@model IEnumerable<Avaliacao>

<h2>Avaliações</h2>
<a asp-action="Create" class="btn btn-primary mb-2">Nova Avaliação</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Aluno</th>
            <th>Curso</th>
            <th>Nota</th>
            <th>Comentário</th>
            <th>Data</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.Aluno?.NM_ALUNO</td>
                <td>@a.Curso?.NM_CURSO</td>
                <td>@a.VL_NOTA</td>
                <td>@a.DS_COMENTARIO</td>
                <td>@a.DT_AVALIACAO.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@a.CD_AVALIACAO" class="btn btn-info btn-sm">Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@a.CD_AVALIACAO" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@a.CD_AVALIACAO" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
