@model IEnumerable<Aluno>

<h2>Alunos</h2>
<a asp-action="Create" class="btn btn-primary mb-2">Novo Aluno</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Data de Nascimento</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var aluno in Model)
        {
            <tr>
                <td>@aluno.NM_ALUNO</td>
                <td>@aluno.EML_ALUNO</td>
                <td>@aluno.DT_NASC.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@aluno.CD_ALUNO" class="btn btn-info btn-sm">Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@aluno.CD_ALUNO" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@aluno.CD_ALUNO" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
